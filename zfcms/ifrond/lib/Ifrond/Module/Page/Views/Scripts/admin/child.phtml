$title = trim($t->title);
if ($title == '') $title = 'Без названия'; 
echo '<li class="'.$class.'" id="page_'.$t->id.'">
			'.$toggler.'
			<a class="page" href="/page/admin/getpage/id/'.$t->id.'/" rel="'.$t->id.'" title="'.$subtitle.'">'.$title.'</a>
			<div class="clear"></div>
		</li>';


