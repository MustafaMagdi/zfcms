$t = $this->page;
if ($t->is_cat) {
	$class = 'cat';
	$toggler = '<a class="tgler" href="/page/admin/childs/pid/'.$t->id.'/"></a>';
} else {
	$class = 'item';
	$toggler = '';
}
$subtitle = str_replace('"', '', strip_tags($t->subtitle));
